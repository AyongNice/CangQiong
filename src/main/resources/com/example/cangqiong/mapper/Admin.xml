<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.cangqiong.mapper.Admin">

    <!-- 定义 SQL 片段 -->
    <sql id="searchEmployeeByName">
        <where>
            <if test="name != null">
                AND name LIKE CONCAT('%', #{name}, '%')
            </if>
        </where>
    </sql>
    <!-- 使用 SQL 片段计算总记录数 -->
    <select id="count" resultType="int">
        SELECT COUNT(*)
        FROM employee
        <!-- 引用 SQL 片段 -->
        <include refid="searchEmployeeByName"/>
    </select>
    <select id="page">
        select id ,
        if(sex = '1', '男', '女'),
        name,
        username,
        password ,
        phone ,
        status ,
        create_time as createTime,
        update_time as updateTime,
        create_user as createUser,
        update_user as updateUser,
        id_number as idNumber
        from employee
        <!-- 引用 SQL 片段 -->
        <include refid="searchEmployeeByName"/>
        limit #{start}, #{pageSize}
    </select>
</mapper>
