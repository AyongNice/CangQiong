<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.cangqiong.mapper.Admin">

    <!-- 定义 SQL 片段 -->
    <sql id="searchEmployeeByName">
        <where>
            <if test="name != null">
                AND name LIKE CONCAT('%', #{name}, '%')
            </if>
        </where>
    </sql>



    <!-- 使用 SQL 片段计算总记录数 -->
    <select id="count" resultType="int">
        SELECT COUNT(*)
        FROM employee
        <!-- 引用 SQL 片段 -->
        <include refid="searchEmployeeByName"/>
    </select>
    <select id="page">
        select id ,
        if(sex = '1', '男', '女'),
        name,
        username,
        password ,
        phone ,
        status ,
        create_time as createTime,
        update_time as updateTime,
        create_user as createUser,
        update_user as updateUser,
        id_number as idNumber
        from employee
        <!-- 引用 SQL 片段 -->
        <include refid="searchEmployeeByName"/>
        limit #{start}, #{pageSize}
    </select>


    <update id="editEmployee">

        update employee

        <set>
            <if test="name != null">
                name = #{name},
            </if>
            <if test="username != null">
                username = #{username},
            </if>
            <if test="password != null">
                password = #{password},
            </if>
            <if test="phone != null">
                phone = #{phone},
            </if>
            <if test="sex != null">
                sex = #{sex},
            </if>
            <if test="idNumber != null">
                id_number = #{idNumber},
            </if>
            <if test="status != null">
                status = #{status},
            </if>

            update_time = #{updateTime},
            update_user = #{updateUser}
        </set>

        where id = #{id}
    </update>
</mapper>
